@model DepartmentViewModel
<h1>Department Update Form</h1>
<form action="/department/update" method="post">
    <input type="text" hidden name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label for="" class="form-label">Code</label>
        <input type="text" class="form-control" name="Code" value="@Model.Code">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Extension Phone</label>
        <input type="number" class="form-control" name="ExtensionPhone" value="@Model.ExtensionPhone">
    </div>
    <input type="submit" value="Submit" />
    <input type="reset" value="Cancle" />
</form>